<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ListView
        android:id="@+id/common_dialog_multiple_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:descendantFocusability="blocksDescendants"
        android:divider="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_dialog_title_bg">

        <TextView
            android:id="@+id/tv_resetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/common_dialog_title_text_color"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/common_dialog_title_text_color"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/common_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/common_dialog_title_text_color"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/common_dialog_spin_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/common_dialog_title_text_color"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

</LinearLayout>